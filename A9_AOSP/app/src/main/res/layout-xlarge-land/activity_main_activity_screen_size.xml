<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityScreenSize"
    tools:layout_editor_absoluteX="795dp"
    tools:layout_editor_absoluteY="498dp">

    <EditText
        android:id="@+id/inputNum1"
        android:layout_width="511dp"
        android:layout_height="105dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNum2"
        android:layout_width="569dp"
        android:layout_height="146dp"
        android:layout_marginStart="892dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/outputNumAns"
        android:layout_width="707dp"
        android:layout_height="179dp"
        android:layout_marginStart="496dp"
        android:layout_marginTop="228dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Subtract"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="496dp"
        android:layout_marginTop="448dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_subtract"
        android:onClick="sButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Multiply"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="796dp"
        android:layout_marginTop="444dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_multiply"
        android:onClick="mButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Divide"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="1100dp"
        android:layout_marginTop="444dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_divide"
        android:onClick="dButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Add"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="436dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_add"
        android:onClick="aButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="1100dp"
        android:layout_marginTop="752dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vector_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="1248dp"
        android:layout_marginTop="752dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_m" />
</androidx.constraintlayout.widget.ConstraintLayout>
