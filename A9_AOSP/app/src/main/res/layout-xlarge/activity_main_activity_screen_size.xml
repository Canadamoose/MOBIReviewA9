<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityScreenSize"
    tools:layout_editor_absoluteX="-93dp"
    tools:layout_editor_absoluteY="1060dp">

    <EditText
        android:id="@+id/inputNum1"
        android:layout_width="372dp"
        android:layout_height="201dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNum2"
        android:layout_width="358dp"
        android:layout_height="170dp"
        android:layout_marginStart="492dp"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/outputNumAns"
        android:layout_width="363dp"
        android:layout_height="114dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="484dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/b_Subtract"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="700dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_subtract"
        android:onClick="sButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Multiply"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="568dp"
        android:layout_marginTop="972dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_multiply"
        android:onClick="mButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Divide"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="556dp"
        android:layout_marginTop="680dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_divide"
        android:onClick="dButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Add"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="1000dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_add"
        android:onClick="aButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="492dp"
        android:layout_marginTop="1380dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_m" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="344dp"
        android:layout_marginTop="1380dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vector_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
