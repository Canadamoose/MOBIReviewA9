<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityScreenSize">

    <EditText
        android:id="@+id/inputNum1"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNum2"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:layout_marginStart="392dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/outputNumAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="160dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Subtract"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="228dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_subtract"
        android:onClick="sButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Multiply"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="228dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_multiply"
        android:onClick="mButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Divide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="468dp"
        android:layout_marginTop="228dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_divide"
        android:onClick="dButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_Add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="220dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/vector_add"
        android:onClick="aButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="504dp"
        android:layout_marginTop="360dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vector_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="556dp"
        android:layout_marginTop="360dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_m" />

</androidx.constraintlayout.widget.ConstraintLayout>
